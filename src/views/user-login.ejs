<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
      <div class="login-container p-4 rounded-3 shadow-sm">
        <h2 class="text-center mb-4" style="color: #181642">Login to Easily</h2>
        <form action="/login" method="post">
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text bg-transparent border-end-0">
                <i class="fas fa-envelope text-muted"></i>
              </span>
              <input
                type="email"
                class="form-control border-start-0 shadow-none"
                placeholder="Enter your email"
                name="email"
                required
              />
            </div>
          </div>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text bg-transparent border-end-0">
                <i class="fas fa-lock text-muted"></i>
              </span>
              <input
                type="password"
                class="form-control border-start-0 shadow-none"
                placeholder="Enter your password"
                name="password"
                required
              />
            </div>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary rounded-3">
              Login
            </button>
          </div>
          <div class="text-center mt-3">
            <a
              href="/forgot-password"
              class="text-muted text-decoration-none small"
            >
              Forgot Password?
            </a>
          </div>
          <div class="text-center mt-3">
            <p class="text-muted small mb-0">
              Don't have an account?
              <a
                href="/signup"
                data-bs-toggle="modal"
                data-bs-target="#staticBackdrop"
                class="text-primary"
                >Sign Up</a
              >
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal for registeration -->
<!-- Registration Modal -->
<div
  class="modal fade"
  id="staticBackdrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div
      class="modal-content"
      style="border-radius: 12px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2)"
    >
      <!-- Header -->
      <div
        class="modal-header"
        style="
          background: linear-gradient(135deg, #007bff, #0056b3);
          color: white;
          border-top-left-radius: 12px;
          border-top-right-radius: 12px;
        "
      >
        <h4 class="modal-title fw-bold" id="staticBackdropLabel">
          Create an Account
        </h4>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <!-- Body -->
      <div class="modal-body" style="padding: 20px">
        <form action="/register" method="post">
          <div class="mb-3">
            <label class="form-label fw-medium">Full Name</label>
            <input
              required
              name="name"
              type="text"
              class="form-control"
              placeholder="Enter your name"
              style="border-radius: 8px; padding: 10px; border: 1px solid #ddd"
            />
          </div>

          <div class="mb-3">
            <label class="form-label fw-medium">Email Address</label>
            <input
              required
              name="email"
              type="email"
              class="form-control"
              placeholder="Enter your email"
              style="border-radius: 8px; padding: 10px; border: 1px solid #ddd"
            />
          </div>

          <div class="mb-3">
            <label class="form-label fw-medium">Password</label>
            <input
              required
              name="password"
              type="password"
              class="form-control"
              placeholder="Enter your password"
              style="border-radius: 8px; padding: 10px; border: 1px solid #ddd"
            />
          </div>

          <button
            type="submit"
            class="btn btn-primary w-100 fw-semibold"
            style="
              border-radius: 8px;
              padding: 12px;
              background: #007bff;
              border: none;
              font-size: 16px;
            "
          >
            Register Now
          </button>
        </form>
      </div>

      <style>
        .login-container {
          background-color: white;
          border: 1px solid #e5e7eb;
          max-width: 400px;
          margin: 3rem auto;
        }

        .input-group-text {
          background-color: transparent;
          border-color: #e5e7eb;
        }

        .form-control {
          border-color: #e5e7eb;
        }

        .form-control:focus {
          border-color: var(--primary-color);
          box-shadow: none;
        }

        .btn-primary {
          background-color: var(--primary-color);
          border-color: var(--primary-color);
          transition: all 0.3s ease;
        }

        .btn-primary:hover {
          background-color: var(--secondary-color);
          border-color: var(--secondary-color);
        }
      </style>
    </div>
  </div>
</div>
